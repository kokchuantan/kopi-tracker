<h1>Edit Kopi</h1>
<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :Origin Farm %><br>
    <%= form.text_area :farm.name %>
  </p>

  <p>
    <%= form.label :Roast type%><br>
    <%= form.text_area :roast.name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', root_path %> 